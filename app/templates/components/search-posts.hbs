{{#animated-if results use=transition}}
    <div class="absolute  z-10 w-full">
        <div class="container bg-white p-10 bg-gray-100">
            <h1>Found {{ results.length }} results</h1>
            {{#each results as |post|}}
                <p>{{{post.title.rendered }}}
                </p>
                {{#if post.better_featured_image.media_details.sizes.thumbnail.source_url }}
                    <img src={{ post.better_featured_image.media_details.sizes.thumbnail.source_url }}
                        alt={{{post.title.rendered }}}>
                {{/if}}
            {{/each}}
        </div>
    </div>
{{/animated-if}}